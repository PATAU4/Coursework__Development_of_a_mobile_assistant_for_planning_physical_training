<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Variants_of_workout">

    <Button
        android:id="@+id/ownVeight"
        android:layout_width="164dp"
        android:layout_height="48dp"
        android:text="Начать"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/TrainWithVeightBtn"
        app:layout_constraintTop_toBottomOf="@+id/ownVeight_img" />

    <TextView
        android:id="@+id/runView3"
        android:layout_width="175dp"
        android:layout_height="18dp"
        android:layout_marginTop="40dp"
        android:text="Тренировка с весом"
        app:layout_constraintEnd_toStartOf="@+id/legsTrainBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/runBtn" />

    <TextView
        android:id="@+id/runView4"
        android:layout_width="202dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:text="Тренировка с собственным весом"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/runView3"
        app:layout_constraintTop_toBottomOf="@+id/legsTrainBtn" />

    <TextView
        android:id="@+id/runView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="84dp"
        android:text="Тренировка ног"
        app:layout_constraintHorizontal_bias="0.826"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/runView"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/legsTrainBtn"
        android:layout_width="164dp"
        android:layout_height="48dp"
        android:text="Начать"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.89"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/runBtn"
        android:layout_width="164dp"
        android:layout_height="48dp"
        android:text="Начать"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/TrainWithVeightBtn"
        android:layout_width="164dp"
        android:layout_height="48dp"
        android:text="Начать"
        app:layout_constraintEnd_toStartOf="@+id/ownVeight_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/runView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Тренировка выносливости"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="166dp"
        android:layout_height="162dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/runView"
        app:srcCompat="@mipmap/run_training_round" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="188dp"
        android:layout_height="191dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/runView2"
        app:srcCompat="@mipmap/leg_training_round" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="178dp"
        android:layout_height="160dp"
        app:layout_constraintEnd_toStartOf="@+id/runView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/runView3"
        app:srcCompat="@mipmap/iron_training" />

    <ImageView
        android:id="@+id/ownVeight_img"
        android:layout_width="204dp"
        android:layout_height="197dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/runView4"
        app:srcCompat="@mipmap/self_training_foreground" />


</androidx.constraintlayout.widget.ConstraintLayout>